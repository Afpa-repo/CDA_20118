<form method="post" action="{{ path('article_delete', {'id': article.artId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.artId) }}">
    <button class="btn btn-danger offset-1 mt-3">Supprimer </button>
</form>
