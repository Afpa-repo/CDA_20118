{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-4 offset-sm-4 ">
        <div class="card shadow p-3 mb-4 bg-blue rounded mt-4">
            <div class="card-body">
                <div class="container">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success ">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <h1>Connexion</h1>

                    <form action="{{ path('security_login') }}" method="post">
                        <div class="form-group">
                            <input placeholder="Identifiant ....." required type="text" name="_username"
                                   class="form-control">
                        </div>
                        <div class="form-group">
                            <input placeholder="Mot de passe ....." required type="password" name="_password"
                                   class="form-control">
                        </div>
                        <div class="form-group row text-center">
                            <div class="col s6 m3">
                                <button type="submit" class="btn btn-success">Connexion</button>
                                <a class="btn btn-success" href="{{ path('utilisateur_inscription') }}">Inscription</a>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}