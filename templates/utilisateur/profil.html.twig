{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <div class="card shadow p-3 mb-5 bg-blue rounded mt-5">
            <div class="card-body">
                <h1 class="text-center border">{{ app.user.utiIdentifiant }}</h1>


                <div class="container border">
                    <div class="row">
                        <div class="col s12 m6">
                            <p>Identifiant : {{ utilisateur.utiIdentifiant }}</p>
                        </div>
                        <div class="col s12 m6">
                            <p>Email : {{ utilisateur.utiMail }}</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m6">
                            <p>Prénom : {{ utilisateur.utiPrenom }}</p>
                        </div>
                        <div class="col s12 m6">
                            <p>Nom : {{ utilisateur.utiNom }}</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m6">
                            <p>Adresse : {{ utilisateur.utiAdresse }}</p>
                        </div>
                        <div class="col s12 m6">
                            <p>Complément d'adresse : {{ utilisateur.utiAdresse2 }}</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m6">
                            <p>Ville : {{ utilisateur.utiVille }}</p>


                        </div>
                        <div class="col s12 m6">
                            <p>Codepostal : {{ utilisateur.utiCodepostal }}</p>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col s12 m6">
                            <p>Date de naissance
                                : {{ utilisateur.utiDateDeNaissance ? utilisateur.utiDateDeNaissance|date('Y-m-d') : '' }} </p>


                        </div>
                        <div class="col s12 m6">
                            <p>Sexe : {{ utilisateur.utiSexe }} </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m6">
                            <p>Tel : {{ utilisateur.utiTel }}</p>
                        </div>
                        <div class="col s12 m6">
                            <p>Pays : {{ utilisateur.pay }}</p>
                        </div>
                    </div>
                </div>


                <div class="form-group row text-center">
                    <div class="col-sm-12">
                        <a class="btn btn-success" href="{{ path('home') }}">Retour a l'accueil</a>
                        <a class="btn btn-success" href="{{ path('utilisateur_edit', {'utiId': utilisateur.utiId}) }}">Modifier</a>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

    {% endblock %}
