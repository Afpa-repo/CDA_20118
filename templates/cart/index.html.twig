{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}

    <div class="container">
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.artNom }}</td>
                    <td>{{ item.product.artPrixHt }}</td>
                    <td>
                        <a href="{{ path('cart_minus', {'id': item.product.artId}) }}" class="btn btn-secondary btn-sm">
                            <i class="bi bi-dash-circle"></i>
                        </a>
                        {{ item.quantity }}
                        <a href="{{ path('cart_add_cart', {'id': item.product.artId}) }}"
                           class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle"></i>
                        </a>
                    </td>
                    <td>{{ item.product.artPrixHt * item.quantity }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id': item.product.artId}) }}" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="2" class="text-right">
                    <a class="btn btn-danger btn-sm">
                        Total : </a>
                    <a class="btn btn-primary btn-sm">
                        {{ size }} Articles </a>
                    <a class="btn btn-primary btn-sm">
                        {{ total }} € </a>
                </td>
            </tr>
            </tfoot>
        </table>
        <div>
            <a href="{{ path('cart_removeAll') }}" class="btn btn-danger btn-sm">
                Supprimer le panier </a>
        </div>
        </div>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}

{% endblock %}