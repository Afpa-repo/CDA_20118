{% extends 'base.html.twig' %}

{% block title %} Valider votre panier {% endblock %}

{% block body %}
<div class="container">
    <h1>Valider votre commande</h1>
    <div class="row">
        <div class="col-sm">
            <h1>Identifiez-vous</h1>
            <form action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                    <input placeholder="Identifiant ....." required type="text" name="_username" class="form-control">
                </div>
                <div class="form-group">
                    <input placeholder="Mot de passe ....." required type="password" name="_password"
                        class="form-control">
                </div>
                <div class="form-group row text-center">
                    <div class="col s6 m3">
                        <button type="submit" class="btn btn-success">Connexion</button>
                        <a class="btn btn-success" href="{{ path('utilisateur_inscription') }}">Inscription</a>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-sm">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success ">
                {{ message }}
            </div>
            {% endfor %}
            <h1>Continuer sans inscription</h1>
            {{ form_start(form_util) }}
            {{ form_row(form_util.nom) }}
            {{ form_row(form_util.prenom) }}
            {{ form_row(form_util.email) }}
            {{ form_row(form_util.livraison) }}
            {{ form_row(form_util.facturation) }}
            {# {{ form_row(form_util.submit) }} #}
            <button class="btn btn-success" href="{{ path('panier_commande')}}" type="submit">Passer la commande</button>
            {{ form_end(form_util) }}


        </div>
    </div>
</div>
</div>
{% endblock %}