{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1 class="text-center">Catégorie</h1>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
        {% endfor %}
    </div>
    <a class="btn btn-success flex mt-3 offset-5" href="{{ path('categorie_new') }}">Ajouter une catégorie</a>

    <div class="offset-3 col-6">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CatNom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.catNom }}</td>
                    <td>
                        <a class="btn btn-primary flex" href="{{ path('categorie_show', {'id': categorie.id}) }}">Détail</a>
                        <a class="btn btn-secondary flex" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
