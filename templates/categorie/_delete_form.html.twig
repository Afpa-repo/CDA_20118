<form method="post" action="{{ path('categorie_delete', {'id': categorie.catId}) }}" onsubmit="return confirm('êtes vous sur de vouloir supprimer cette catégorie?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.catId) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
