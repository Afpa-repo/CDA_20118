{% extends 'base.html.twig' %}

{% block body %}
<h1>Page de contact</h1>
{% for message in app.flashes('success') %}
    <div class="alert alert-success ">
        {{ message }}
    </div>
{% endfor %}
{{ form_start(contactForm) }}
<div class="container">
    <div class="row">
      <div class="col-sm">
        {{ form_row(contactForm.nom) }}
      </div>
      <div class="col-sm">
        {{ form_row(contactForm.email) }}
      </div>
      {{ form_end(contactForm) }}
    </div>
  </div>
  



{% endblock %}